@{
    ViewBag.Title = "About";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<p>Use this area to provide additional information.</p>
<h2 id="clientCount"></h2>
@section scripts{
    <script>
        $(function () {
            var helloWorldHub = $.connection.HelloWorld;

            helloWorldHub.client.updateClientsConnectedCount = function (data) {
                $('#clientCount').html('<span>'  + data + '</span>')
            }
        })
    </script>

}
